<h2 class ="h2 sign bg-warning pt-3 pb-3">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<form>
<div class='field'>
  </div>

  <div class="form-group">
    <%= f.label :image, "アイコン" %>
    <%= f.file_field :image, class: "form-control-file", id: "exampleFormControlFile1" %>
  </div>

  <div class="form-group">
    <%= f.label :name, "名前" %><em>(10文字まで)</em><br />
    <%= f.text_field :name, autofocus: true, maxlength: "10", class: "form-control", id: "exampleFormControlInput1", placeholder: "name" %>
  </div>


  <div class="form-group">
    <%= f.label :age, "年齢" %>
    <%= f.select :age,  options_for_select((10..100).to_a), class: "form-control",id: "exampleFormControlSelect1" %>
    </select>
  </div>

  <div class="form-group">
    <%= f.label :gender, "年齢" %><br />
      <%= f.select :gender, ["male","female","unselected"] , {include_blank: 'unselected'} %>
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Introducion</label>
    <%= f.text_area :text, class: "form-control", id: "exampleFormControlTextarea1", rows: 3 %>
  </div>
  
  
  <div class="form-group">
    <%= f.label :email ,"メールアドレス"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", type:"email", class: "form-control", id: "exampleFormControlInput1", placeholder: "name@example.com" %>
  </div>




  <div class="form-group">
    <%= f.label :password, "パスワード"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "exampleFormControlInput1", placeholder: "password" %>
  </div>


  <div class="form-group">
    <%= f.label :password_confirmation,"パスワード再入力" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control", id: "exampleFormControlInput1", placeholder: "password" %>
  </div>
  

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>

<button type="button" class="btn btn-warning btn-lg">
  <%= render "users/shared/links" %>
</button>