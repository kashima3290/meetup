<%= render "communities/header" %>
<%= form_with url: community_boards_path do |f| %>
<div class="form-group w-50 mx-auto">
  <h1 class="h2 text-center m-3">New Board</h1>
  <h1 class="h5">Community ： <%= @community.name %></h1>
  <h1>Image（複数選択可能：SHIFT+SELECT）</h1>
    <%= f.file_field :images, multiple: true %>
  <div class="form-group">
    <h1 for="exampleFormControlTextarea1">text</h1>
    <%= f.text_area :text, placeholder: "text", class: "form-control" %>
  </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Tags（　,で区切りを入れてください）</label>
      <%= f.text_field :tag_list, placeholder: "tag, ~", class: "form-control" %>
    </div>

  <%= f.button "create!",class: "mt-5 text-light bg-success btn w-25 mx-auto" %>
</div>
<% end %>