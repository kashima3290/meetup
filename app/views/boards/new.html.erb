<header class= "sticky-top text-center">
  <%= image_tag current_user.image.url, class: "user-icon" %>
  <h1><%= current_user.name %></h1>
  <div class="icon-box">
    <%= link_to "", root_path, class: "fas fa-backspace" %>
    <%= link_to "", community_messages_path, class: "far fa-comment-dots" %>
    <%= form_with class: 'form-box', url: community_boards_path do |b| %>
      <%= b.button type: 'submit', class: 'form-btn-board btn bg-light text-primary border ml-5' do %>
        create
      <% end %>
    <% end %>
  </div>
  </div>
</header>

<div class="message-index">
  <div class='side'>
  <% if @community.image.present? %>
    <%= image_tag @community.image.url, class: "community-icon" %>
  <% end %>
  </div>
  <div class='message-main'>
  
  </div>
</div>