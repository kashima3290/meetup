<%= render 'header' %>
<% current_user.communities.each do |community| %>
<div class="card mb-3">
  <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="#{<%= community.image %>}" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
  <div class="card-body">
    <h5 class="card-title"><%= community.name %></h5>
    <p class="card-text"><%= community.text %></p>
    <%= link_to 'edit', edit_community_path(community.id) %>
    <%= link_to 'show', community_path(community.id) %>
    <h1></h1>
    <%= link_to 'INTO CHAT', community_chat_path(community.id) %>
    <p class="card-text"><small class="text-muted">フリー</small></p>
  </div>
</div>
  <% end %>
