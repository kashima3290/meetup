<header class= "sticky-top text-center">
  <% if current_user.image.present? %>
    <%= image_tag current_user.image.url, class: "user-icon" %>
  <% end %>
  <h1><%= current_user.name %></h1>
  <div class="icon-box">
    <%= link_to "", user_path(current_user.id), class: "fas fa-user" %>
    <%= link_to "", root_path(current_user.id), class: "fas fa-users" %>
    <%= link_to "", new_community_path, class: "fas fa-user-plus" %>
    <%= link_to "", community_boards_path(current_user.id), class: "far fa-comment-alt" %>
    <%= link_to "メッセージ", new_community_part_path, class: "fas fa-plus bg-success text-light p-2 rounded-pill border" %>
  </div>
</header>


<% @parts.each do |part| %>
<div class="card bg-light text-white community-card w-50 mx-auto mt-1 mb-1">
  <div class='request-box'>
  <%= image_tag part.user.image.url, class: "participation-icon" %>
    <div class='request-text'>
      <h5 class="text-secondary">＜<%= part.user.name %></h5>
      <p class="text-dark ml-4 h5"><%= part.text %></p>
      <% if part.image.present? %>
        <%= image_tag part.image.url, class: "h-75 w-75" %>
      <% end %>
    </div>
    <div class='community-card-btns'>
    </div>
  </div>
  </div>
<% end %>


